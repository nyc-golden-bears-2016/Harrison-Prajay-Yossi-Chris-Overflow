<% if session[:invalid_login] %>
  <p class="error"><%= session[:invalid_login] %></p>
<% session[:invalid_login] = nil; end %>
<% if session[:register_message] %>
  <p class="error"><%= session[:register_message] %></p>
<% session[:register_message] = nil; end %>
<% if session[:new_post_message] %>
  <p class="error"><%= session[:new_post_message] %></p>
<% session[:new_post_message] = nil; end %>

<div id= "login_form">
  <h1>Login</h1>
  <form action="/login" method="post">
    <p>Email</p>
    <input type="text" name="email" value="">
    <p>Password</p>
    <input type="password" name="password" value="">
    <br>
    <input type="submit" value="login">
  </form>
</div>
